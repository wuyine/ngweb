$minWidth = 1200px
$maxWidth = 1600px;

.layout-content
    width $minWidth
    @media screen and (min-width 1650px)
        width $maxWidth

    

.el-header
    padding 0;
.el-header,
.el-footer
    background-color: #B3C0D1;
    color: #333;
    line-height: 60px;
    text-align: center;
.el-container
    display: flex;
    box-sizing: border-box;
.el-aside
    background-color: #D3DCE6;
    text-align: center;
    line-height: 200px;
.el-main
    background-color: #E9EEF3;
    color: #333;
    text-align: center;
    line-height: 160px;